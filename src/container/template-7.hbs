{{> headerDark }}

{{!-- Hero --}}
{{#with hero}}
    <div class="hero">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_descript">{{description}}</p>
        <button class="hero_button" href="{{button.url}}">{{button.text}}</button>
    </div>
{{/with}}
{{!-- /Hero --}}

{{!-- about --}}
{{#with about}}
<div class="about">
    <h1 class="about_heading">{{heading}}</h1>
    <p class="about_info">{{info}}</p>
</div>
{{/with}}
{{!-- /about --}}

{{!-- main --}}
<main class="main">
    <div class="main_header">
        <h1 class="main_header_title">Our Articles</h1>
        <button class="main_header_button">View All</button>
    </div>
    <div class="main_content">
        {{> articleCardDark}}
    </div>
</main>
{{!-- /main --}}

{{> footerDark}}